<h1>Doctor </h1>
<h3><%= @doctor.name %></h3>

<h3><%= @doctor.field %> specialist</h3>

<% if @patients.length > 0%>
  <h3>Doctor's Patients</h3>
  <% @patients.each do |patient| %>
    <dl>
      <dt><%= patient.name %></dt>
      <dd>Birthdate: <%= patient.birthday%></dd>
      <dd></dd>
    </dl>
  <% end %>
<% end %>

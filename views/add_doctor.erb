<form class="" action="/add_doctor" method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="doctor-name" placeholder="Last Name, First Name">
  </div>
  <div class="form-group">
    <label for="specialties">Specialties</label>
    <select class="form-control" name="specialty-id" id="specialties">
      <% @specialties.each do |specialty| %>
        <option value="<%=specialty.id%>"><%= specialty.field %></option>
      <%end%>
    </select>
  </div>
  <button type="submit" name="add-doctor" class="btn btn-info">Add a Doctor</button>
</form>
<%if @doctor.class == Doctor %>
  <p><%= @doctor.name %> has been added to the doctors database</p>
<% end %>
